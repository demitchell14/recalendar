{
  "compilerOptions": {
    "sourceMap": false,
    "strictNullChecks": true,
    "module": "commonjs",
    "jsx": "react",
    "target": "es5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "lib": ["dom", "es2017", "es5", "es6", "es7"],
    "outDir": ".",
    "strict": false
  },
  "exclude": ["docs/*", "webpack.config.*", "*.js", "examples/*", "__tests__", "src/icons", "src/styles"]
}